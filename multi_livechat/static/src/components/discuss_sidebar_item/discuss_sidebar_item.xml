<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="mail.DiscussSidebarItem" t-inherit-mode="extension">
        <xpath
            expr="//div[hasclass('o_DiscussSidebarItem_commands')]/t[1]"
            position="attributes"
        >
            <attribute name="t-if">
                thread.channel_type != 'chat' and thread.channel_type != 'livechat'
            </attribute>
        </xpath>
    </t>
</templates>
